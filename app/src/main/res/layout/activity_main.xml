<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- App Title -->
    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:fontFamily="@font/lato_bold"
        android:letterSpacing="0.05"
        android:text="DriverSafe"
        android:textColor="@color/black"
        android:textSize="42sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Subtitle -->
    <TextView
        android:id="@+id/subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/lato_regular"
        android:text="Stay Safe. Drive Smart."
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView" />

    <!-- Name Input -->
    <EditText
        android:id="@+id/nameentry"
        android:layout_width="0dp"
        android:layout_height="55dp"
        android:layout_marginHorizontal="32dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/rounded_edittext_bg"
        android:fontFamily="@font/lato_regular"
        android:hint="Enter Your Name"
        android:inputType="textPersonName"
        android:paddingStart="16dp"
        android:textColor="#FFFFFF"
        android:textColorHint="#CCCCCC"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/subtitle" />

    <!-- Vehicle Number Input -->
    <EditText
        android:id="@+id/vehiclenumber"
        android:layout_width="0dp"
        android:layout_height="55dp"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="32dp"
        android:background="@drawable/rounded_edittext_bg"
        android:hint="Enter Vehicle Number"
        android:paddingStart="16dp"
        android:textColor="#FFFFFF"
        android:textColorHint="#CCCCCC"
        android:inputType="text"
        android:fontFamily="@font/lato_regular"
        app:layout_constraintTop_toBottomOf="@+id/nameentry"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Camera Permission Button -->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/CameraPermissionbutton"
        android:layout_width="0dp"
        android:layout_height="55dp"
        android:layout_marginHorizontal="32dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/rounded_button_bg"
        android:drawableLeft="@drawable/ic_camera"
        android:drawablePadding="12dp"
        android:fontFamily="sans-serif-medium"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:text="Allow Access to Camera"
        android:textAllCaps="false"
        android:textColor="#2C2C2C"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dobentry" />

    <!-- GPS Permission Button -->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/GpsPermissionButton"
        android:layout_width="0dp"
        android:layout_height="55dp"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="32dp"
        android:background="@drawable/rounded_button_bg"
        android:drawableLeft="@drawable/ic_gps"
        android:drawablePadding="12dp"
        android:gravity="center_vertical"
        android:text="Allow Access for GPS"
        android:paddingLeft="15dp"
        android:textAllCaps="false"
        android:textColor="#2C2C2C"
        android:textSize="16sp"
        android:fontFamily="sans-serif-medium"

        app:layout_constraintTop_toBottomOf="@+id/CameraPermissionbutton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <!-- Gender Dropdown -->
    <Spinner
        android:id="@+id/genderSpinner"
        android:layout_width="0dp"
        android:layout_height="55dp"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="32dp"
        android:background="@drawable/rounded_edittext_bg"
        android:spinnerMode="dropdown"
        android:paddingStart="16dp"
        android:popupBackground="#FFFFFF"
        app:layout_constraintTop_toBottomOf="@+id/vehiclenumber"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <!-- Date of Birth Input -->
    <EditText
        android:id="@+id/dobentry"
        android:layout_width="0dp"
        android:layout_height="55dp"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="32dp"
        android:background="@drawable/rounded_edittext_bg"
        android:hint="Enter Date of Birth (DD/MM/YYYY)"
        android:paddingStart="16dp"
        android:textColor="#FFFFFF"
        android:textColorHint="#CCCCCC"
        android:inputType="date"
        android:focusable="false"
        android:fontFamily="@font/lato_regular"
        app:layout_constraintTop_toBottomOf="@+id/genderSpinner"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>



    <!-- Next Button -->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/nextbutton"
        android:layout_width="150dp"
        android:layout_height="55dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/next_button_gradient"
        android:fontFamily="@font/lato_bold"
        android:text="Next"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
